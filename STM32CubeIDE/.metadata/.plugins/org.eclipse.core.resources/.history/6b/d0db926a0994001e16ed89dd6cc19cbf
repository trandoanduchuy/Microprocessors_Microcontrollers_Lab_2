#include "DigitalClock.h"

//int hour = 15;
//int minute = 8;
//int second = 50;

void updateClockBuffer(int* clock_buffer, int* second, int* minuite, int* hour)
{
	clock_buffer[0] = *hour/10;
	clock_buffer[1] = *hour%10;
	clock_buffer[2] = *minute/10;
	clock_buffer[3] = *minute%10;
}

void DigitalClock(int* clock_buffer, int* second, int* minute, int* hour)
{
	if(timer4_flag == 1)
	{
		setTimer4(1000);
		*second++;
		if(*second >= 60)
		{
			*minute++;
			*second = 0;
		}
		if(*minute >= 60)
		{
			*hour++;
			*minute = 0;
		}
		if(*hour >= 24)
		{
			*hour = 0;
		}
	}
	updateClockBuffer(clock_buffer);
}



