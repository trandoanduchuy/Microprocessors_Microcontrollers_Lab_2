#ifndef INC_LED_MATRIX_H_
#define INC_LED_MATRIX_H_

#include "global.h"

extern const int MAX_LED_MATRIX;
extern int index_led_matrix;

void updateLEDMatrix(int index);

void LedMatrixDisplay(void)
{
	switch(ledmatrixdisplay_status)
	{
	case INIT:
		ledmatrixdisplay_status = COL0;
	case COL0:
		updateLEDMatrix(0);
		if(timer2_flag == 0)
		{
			setTimer2(COL_DISPLAY_TIME);
			ledmatrixdisplay_status = 1;
		}
		break;
	case COL0:
		break;
	case COL0:
		break;
	case COL0:
		break;
	case COL0:
		break;
	case COL0:
		break;
	case COL0:
		break;
	case COL0:
		break;
	default:
		break;
	}
}

#endif /* INC_LED_MATRIX_H_ */
